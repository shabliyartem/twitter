<%- model_class = User -%>
<div class="page-header">
  <h1><%= @user.username %></h1>
</div>

<% content_for :avatar do %>
    <%= image_tag(@user.avatar_url) %>
    <% if user_signed_in? %>
        <div id="follow-link"><%= follow_link(@user) %></div>
    <% end %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong>Bio:</strong></dt>
  <dd><%= @user.bio %></dd>
  <dt><strong>Location:</strong></dt>
  <dd><%= @user.location %></dd>
</dl>

<div class="form-actions">

  <% if user_signed_in? %>
      <a class="btn" data-toggle="modal" data-target="#new-tweet-modal">New tweet</a>

      <div class="modal" id="new-tweet-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">What's happen?</h3>
        </div>
        <div class="modal-body">
          <div id="new-tweet">
            <%= render :partial => "tweets/form" %>
          </div>
        </div>
      </div>
  <% end %>

  <div id="wall">
    <%= render :template => "tweets/index" %>
  </div>
</div>
