<div class="page-header">
  <h1>Users</h1>
</div>
<%= paginate @users %>
<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th></th>
    <th>Registered at</th>
    <th>Bio</th>
    <th>Location</th>
  </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar_url, :class => "thumb" %></td>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%=l user.created_at, :format => :date %></td>
        <td><%= user.bio %></td>
        <td><%= user.location %></td>
        <td>
          <% if user_signed_in? %>
              <div id="follow-link-<%= user.id %>"><%= follow_link(user) %></div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
